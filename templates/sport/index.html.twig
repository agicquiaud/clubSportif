{% extends 'base.html.twig' %}

{% block title %}Sports{% endblock %}

{% block body %}
    <h1>List of the Sports</h1>
    <button class="btn btn-outline-success" href="{{ path('sport_new') }}"> Create new</button>
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                <td scope="row">{{ sport.id }}</td>
                <td>{{ sport.name }}</td>
                <td>
                    <a href="{{ path('sport_show', {'id': sport.id}) }}">show</a>
                    <a href="{{ path('sport_edit', {'id': sport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
